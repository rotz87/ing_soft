<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/registro_scolastico</property>
		<property name="connection.username">ingsoft</property>
		<property name="connection.password">ingsoft</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/domain/persistent/Appello.hbm.xml" />
		<mapping resource="ormmapping/domain/persistent/Assenza.hbm.xml" />
		<mapping resource="ormmapping/domain/persistent/Calendario.hbm.xml" />
		<mapping resource="ormmapping/domain/persistent/Classe.hbm.xml" />
		<mapping resource="ormmapping/domain/persistent/Docente.hbm.xml" />
		<mapping resource="ormmapping/domain/persistent/Giustificazione.hbm.xml" />
		<mapping resource="ormmapping/domain/persistent/Indirizzo.hbm.xml" />
		<mapping resource="ormmapping/domain/persistent/LibrettoAssenze.hbm.xml" />
		<mapping resource="ormmapping/domain/persistent/PermessoEntrata.hbm.xml" />
		<mapping resource="ormmapping/domain/persistent/PermessoUscita.hbm.xml" />
		<mapping resource="ormmapping/domain/persistent/RegistroAssenze.hbm.xml" />
		<mapping resource="ormmapping/domain/persistent/Ritardo.hbm.xml" />
		<mapping resource="ormmapping/domain/persistent/Scuola.hbm.xml" />
		<mapping resource="ormmapping/domain/persistent/Studente.hbm.xml" />
		<mapping resource="ormmapping/domain/persistent/UscitaAnticipata.hbm.xml" />
	</session-factory>
</hibernate-configuration>
