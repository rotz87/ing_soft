<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="domain.persistent.LibrettoAssenze" table="LibrettoAssenze" schema="" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="studente" column="StudenteId" class="domain.persistent.Studente" cascade="save-update,lock" unique="true" not-null="true" lazy="proxy">
		</many-to-one>
		<set name="giustificate" lazy="extra" cascade="save-update,lock" inverse="false">
			<key column="LibrettoAssenzeID" not-null="true"/>
			<one-to-many class="domain.persistent.Assenza"/>
		</set>
		<set name="nonGiustificate" lazy="extra" cascade="save-update,lock" inverse="false">
			<key column="LibrettoAssenzeID2" not-null="true"/>
			<one-to-many class="domain.persistent.Assenza"/>
		</set>
		<set name="ritardi" lazy="extra" cascade="save-update,lock" inverse="false">
			<key column="LibrettoAssenzeID" not-null="true"/>
			<one-to-many class="domain.persistent.Ritardo"/>
		</set>
		<set name="uscite" lazy="extra" cascade="save-update,lock" inverse="false">
			<key column="LibrettoAssenzeID" not-null="true"/>
			<one-to-many class="domain.persistent.UscitaAnticipata"/>
		</set>
	</class>
</hibernate-mapping>
