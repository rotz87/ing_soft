<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="domain.persistent.Scuola" table="Scuola" schema="" lazy="false">
		<meta attribute="class-description">
			@deprecated
			@author Fabio
		</meta>
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<set name="classi" lazy="extra" cascade="save-update,lock" inverse="false">
			<key column="ScuolaID" not-null="true"/>
			<one-to-many class="domain.persistent.Classe"/>
		</set>
		<set name="docenti" lazy="extra" cascade="save-update,lock" inverse="false">
			<key column="ScuolaID" not-null="true"/>
			<one-to-many class="domain.persistent.Docente"/>
		</set>
	</class>
</hibernate-mapping>
