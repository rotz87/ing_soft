<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="domain.persistent.Calendario" table="Calendario" schema="" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="instance" column="CalendarioID" class="domain.persistent.Calendario" cascade="save-update,lock" unique="true" not-null="true" lazy="proxy">
		</many-to-one>
		<property name="dataOdierna" column="DataOdierna" type="date" not-null="false" lazy="false"/>
		<array name="giorniFestivi" table="Entity" cascade="all">
			<key column="CalendarioID"/>
			<index column="CalendarioIndex" type="integer"/>
			<element column="GiorniFestivi" type="date"/>
		</array>
		<primitive-array name="giorniSettimanaliFestivi" table="Calendario_giorniSettimanaliFestivi">
			<key column="CalendarioID"/>
			<index column="CalendarioIndex" type="integer"/>
			<element column="GiorniSettimanaliFestivi" type="integer" length="11"/>
		</primitive-array>
	</class>
</hibernate-mapping>
