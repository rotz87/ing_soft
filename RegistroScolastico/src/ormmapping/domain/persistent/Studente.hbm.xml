<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="domain.persistent.Studente" table="Studente" schema="" lazy="false">
		<id name="id" column="Id" type="long" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="indrizzo" column="IndirizzoID" class="domain.persistent.Indirizzo" cascade="save-update,lock" unique="true" not-null="true" lazy="proxy">
		</many-to-one>
		<property name="nome" column="Nome" type="string" length="255" not-null="false" lazy="false"/>
		<property name="cognome" column="Cognome" type="string" length="255" not-null="false" lazy="false"/>
		<property name="codiceFiscale" column="CodiceFiscale" type="string" length="255" not-null="false" lazy="false"/>
	</class>
</hibernate-mapping>
