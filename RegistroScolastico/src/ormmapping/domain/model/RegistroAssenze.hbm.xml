<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="domain.model.RegistroAssenze" table="RegistroAssenze" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<map name="librettiAssenze" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="RegistroAssenzeID" not-null="true"/>
			<index column="RegistroAssenzeIndex" type="integer"/>
			<one-to-many class="domain.model.LibrettoAssenze"/>
		</map>
		<map name="appelliRegistro" lazy="true" cascade="save-update,lock" inverse="false" order-by="Data">
			<key column="RegistroAssenzeID" not-null="true"/>
			<index column="RegistroAssenzeIndex" type="integer"/>
			<one-to-many class="domain.model.Appello"/>
		</map>
	</class>
</hibernate-mapping>
