<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="domain.model.Scuola" table="Scuola" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="nome" column="Nome" type="string" length="255" not-null="false" lazy="false"/>
		<list name="classi" lazy="false" cascade="save-update,lock" inverse="false">
			<key column="ScuolaID" not-null="true"/>
			<index column="ScuolaIndex" type="integer"/>
			<one-to-many class="domain.model.Classe"/>
		</list>
		<list name="docenti" lazy="false" cascade="save-update,lock" inverse="false">
			<key column="ScuolaID" not-null="true"/>
			<index column="ScuolaIndex" type="integer"/>
			<one-to-many class="domain.model.Docente"/>
		</list>
	</class>
</hibernate-mapping>
