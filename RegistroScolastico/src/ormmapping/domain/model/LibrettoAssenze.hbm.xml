<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="domain.model.LibrettoAssenze" table="LibrettoAssenze" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="studente" column="StudenteId" class="domain.model.Studente" cascade="save-update,lock" unique="true" not-null="true" lazy="false">
		</many-to-one>
		<list name="giustificate" lazy="false" cascade="save-update,lock" inverse="false">
			<key column="LibrettoAssenzeID1" not-null="false"/>
			<index column="LibrettoAssenzeIndex" type="integer"/>
			<one-to-many class="domain.model.Assenza"/>
		</list>
		<list name="nonGiustificate" lazy="false" cascade="save-update,lock" inverse="false">
			<key column="LibrettoAssenzeID2" not-null="false"/>
			<index column="`Column`" type="integer"/>
			<one-to-many class="domain.model.Assenza"/>
		</list>
		<list name="ritardi" lazy="false" cascade="save-update,lock" inverse="false">
			<key column="LibrettoAssenzeID" not-null="true"/>
			<index column="LibrettoAssenzeIndex" type="integer"/>
			<one-to-many class="domain.model.Ritardo"/>
		</list>
		<list name="uscite" lazy="false" cascade="save-update,lock" inverse="false">
			<key column="LibrettoAssenzeID" not-null="true"/>
			<index column="LibrettoAssenzeIndex" type="integer"/>
			<one-to-many class="domain.model.UscitaAnticipata"/>
		</list>
	</class>
</hibernate-mapping>
