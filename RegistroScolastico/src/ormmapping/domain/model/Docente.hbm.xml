<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="domain.model.Docente" table="Docente" lazy="false">
		<id name="idDocente" column="IdDocente" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="nome" column="Nome" type="string" length="255" not-null="false" lazy="false"/>
		<property name="cognome" column="Cognome" type="string" length="255" not-null="false" lazy="false"/>
		<set name="classi" table="Docente_Classe" lazy="true" cascade="save-update,lock">
			<key column="DocenteIdDocente" not-null="true"/>
			<many-to-many column="ClasseIdClasse" class="domain.model.Classe">
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>
