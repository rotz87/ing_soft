<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="domain.model.Assenza" table="Assenza" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="giustificazione" column="GiustificazioneID" class="domain.model.Giustificazione" cascade="save-update,lock" unique="true" not-null="false" lazy="no-proxy">
		</many-to-one>
		<list name="appelliAssenza" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="AssenzaID" not-null="false"/>
			<index column="AssenzaIndex" type="integer"/>
			<one-to-many class="domain.model.Appello"/>
		</list>
	</class>
</hibernate-mapping>
