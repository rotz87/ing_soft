<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="domain.model.Assenza" table="Assenza" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="giustificazione" column="GiustificazioneID" class="domain.model.Giustificazione" cascade="save-update,lock" unique="true" not-null="false" lazy="false">
		</many-to-one>
		<bag name="appelli" table="Assenza_Appello" lazy="false" cascade="save-update,lock">
			<key column="AssenzaID" not-null="true"/>
			<many-to-many column="AppelloIdAppello" class="domain.model.Appello">
			</many-to-many>
		</bag>
	</class>
</hibernate-mapping>
