<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="domain.model.Calendario" table="Calendario" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<set name="giorniFestivi" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="CalendarioID" not-null="true"/>
			<one-to-many class="domain.model.Giorno"/>
		</set>
		<list name="giorniSettimanaliFestivi" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="CalendarioID" not-null="true"/>
			<index column="CalendarioIndex" type="integer"/>
			<one-to-many class="domain.model.GiornoSettimanale"/>
		</list>
	</class>
</hibernate-mapping>
